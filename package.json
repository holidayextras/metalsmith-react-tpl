{
  "name": "metalsmith-react-tpl",
  "version": "0.2.0",
  "description": "Use React in metalsmith as a templating language",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel ./src -d ./lib",
    "clean": "rm -rf ./lib",
    "prepublish": "npm run build",
    "coverage": "npm run build && istanbul cover _mocha -- --compilers js:babel/register tests/*.js && istanbul check-coverage --statements 97 --branches 90 --functions 100 --lines 98",
    "ci": "npm run coverage && npm run lint",
    "lint": "eslint tests src lib && echo 'All Good!'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/richardstevens/metalsmith-react-tpl.git"
  },
  "keywords": [
    "metalsmith",
    "static-site",
    "generator",
    "react",
    "reactjs",
    "template",
    "engine",
    "view"
  ],
  "author": "Richard Stevens <rsrichardstevens@googlemail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/richardstevens/metalsmith-react-tpl/issues"
  },
  "homepage": "https://github.com/richardstevens/metalsmith-react-tpl",
  "dependencies": {
    "babel": "^5.8.23",
    "async": "^0.9.0",
    "babel-core": "^5.6.7",
    "debug": "^2.2.0",
    "multimatch": "^2.0.0",
    "object-assign": "^2.0.0",
    "react": "^0.14.3",
    "react-dom": "^0.14.6"
  },
  "devDependencies": {
    "chai": "^3.4.1",
    "chai-lint": "^0.1.1",
    "eslint": "^1.10.3",
    "eslint-plugin-mocha": "^1.1.0",
    "eslint-plugin-react": "^3.15.0",
    "istanbul": "^0.4.2",
    "metalsmith": "^1.3.0",
    "mocha": "^2.3.4",
    "sinon": "^1.17.2"
  }
}
