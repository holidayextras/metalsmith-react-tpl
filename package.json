{
  "name": "metalsmith-react-tpl",
  "version": "2.0.0",
  "description": "Use React in metalsmith as a templating language",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel ./src -d ./lib",
    "clean": "rm -rf ./lib",
    "prepublish": "npm run build",
    "coverage": "NODE_ENV=test npm run build && nyc mocha && nyc check-coverage",
    "ci": "npm run coverage && npm run lint",
    "lint": "eslint tests src lib && echo 'All Good!'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/richardstevens/metalsmith-react-tpl.git"
  },
  "keywords": [
    "metalsmith",
    "static-site",
    "generator",
    "react",
    "reactjs",
    "template",
    "engine",
    "view"
  ],
  "author": "Richard Stevens <rsrichardstevens@googlemail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/richardstevens/metalsmith-react-tpl/issues"
  },
  "homepage": "https://github.com/richardstevens/metalsmith-react-tpl",
  "dependencies": {
    "async": "^0.9.0",
    "babel-core": "^6.26.0",
    "debug": "^2.2.0",
    "multimatch": "^2.0.0",
    "object-assign": "^2.0.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^3.4.1",
    "chai-lint": "^0.1.1",
    "eslint": "^1.10.3",
    "eslint-plugin-mocha": "^1.1.0",
    "eslint-plugin-react": "^3.15.0",
    "metalsmith": "^1.3.0",
    "mocha": "^2.3.4",
    "nyc": "^11.2.1",
    "publish": "^0.6.0",
    "sinon": "^1.17.2"
  }
}
